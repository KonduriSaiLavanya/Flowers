<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c9c5c5"
        android:orientation="vertical">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
       android:id="@+id/roseimg"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/rose"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rosetext"
        android:text="Rose Flowers"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/callaimg"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
          android:src="@drawable/calla"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/callatext"
            android:text="Calla Flowers"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/lillyimg"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/lily"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lillytext"
            android:text="Calla Flowers"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/uvimg"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/uv"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uvtext"
            android:text="Uv Flowers"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>


</ScrollView>